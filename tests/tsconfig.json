{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "../client/node_modules/@types"
        ],
        "baseUrl": "..",
        "paths": {
            "@playwright/test": [
                "client/node_modules/@playwright/test"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ]
}